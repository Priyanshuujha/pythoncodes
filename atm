balance = 5000
pin = 1234

user_pin = int(input("Enter your pin: "))

if user_pin == pin:
    print("Your account balance is:", balance)
    amount = int(input("Enter the amount you want to withdraw: "))
    if amount <= balance:
        balance -= amount
        print("Amount received. New balance is", balance)
    else:
        print("Insufficient balance")
else:
    print("Incorrect pin.")
    
